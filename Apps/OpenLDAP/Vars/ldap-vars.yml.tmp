# ============================
# Vars for OpenLDAP Kubernetes Manifests
# ============================

# ----------------------------
# Namespace
# ----------------------------
ldap_namespace: # Namespace for OpenLDAP

# ----------------------------
# Deployment
# ----------------------------
ldap_image: # Image for OpenLDAP
ldap_image_tag: # Tag for the OpenLDAP image
ldap_organisation: # Organisation name for OpenLDAP
ldap_domain: # Domain for OpenLDAP
ldap_log_level: # Log level for OpenLDAP (e.g., "256" for debug)

# ----------------------------
# Service
# ----------------------------
ldap_nodeport: # NodePort for OpenLDAP service
ldaps_nodeport: # NodePort for LDAPS service

# ----------------------------
# Persistent Volume Claims
# ----------------------------
ldap_storage_class: # Storage class for OpenLDAP PVC e.g., "rook-ceph-block"
ldap_storage_data_size: # 1Gi  # Size for OpenLDAP data PVC
ldap_storage_config_size: # 512Mi  # Size for OpenLDAP config PVC

